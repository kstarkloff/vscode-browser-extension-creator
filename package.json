{
  "name": "browser-extension-creator",
  "displayName": "Browser Extension Creator",
  "description": "This extension creates a template for an extension of a browser of your choice.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "browser-extension-creator.chrome",
      "title": "Create Chrome extension"
    }],
    "menus": {
      "explorer/context": [{
        "command": "browser-extension-creator.chrome",
        "when": "!editorHasSelection",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
